datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  bookings Booking[]
}

model Vehicle {
  id       Int       @id @default(autoincrement())
  name     String
  bookings Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  status    String
  userId    Int
  vehicleId Int

  user      User     @relation(fields: [userId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
}
